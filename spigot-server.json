{
    "variables": {
        "version": "CHANGE ME",
        "local-artefact-dir": "CHANGE ME",
        "container-artefact-dir": "/",
        "container-dir": "/minecraft",
        "user": "minecraft",
        "uid": "10000",
        "group": "minecraft",
        "gid": "10000"
    },
    "builders": [
        {
            "type": "docker",
            "image": "alpine:3.9",
            "pull": false,
            "commit": true,
            "run_command": [ "-d", "-i", "-t", "{{.Image}}", "/bin/sh" ],
            "changes": [
                "USER {{user `user`}}",
                "EXPOSE 25565",
                "ENTRYPOINT cd {{user `container-dir`}}; java -Xms512M -Xmx1G -XX:MaxPermSize=128M -XX:+UseConcMarkSweepGC -jar {{user `container-artefact-dir`}}/spigot-{{user `version`}}.jar"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "apk --no-cache --update upgrade",
                "apk --no-cache add ca-certificates nss openjdk8-jre-base",
                "update-ca-certificates --fresh",
                "addgroup -g {{user `gid`}} {{user `group`}} && adduser -u {{user `uid`}} -D -G {{user `group`}} -h {{user `container-dir`}} -s /bin/bash {{user `user`}}",
                "rm -rf /var/cache/apk/*",
                "mkdir -m 755 -p {{user `container-artefact-dir`}}"
            ]
        },
        {
            "type": "file",
            "source": "{{user `local-artefact-dir`}}/spigot-{{user `version`}}.jar",
            "destination": "{{user `container-artefact-dir`}}/"
        },
        {
            "type": "shell",
            "inline": [
                "chmod a+r {{user `container-artefact-dir`}}/spigot-{{user `version`}}.jar"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "docker-tag",
            "repository": "minecraft-spigot",
            "tag": "{{user `version`}}"
        }
    ]
}
