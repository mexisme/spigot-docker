{
    "variables": {
        "version": "CHANGE ME",
        "spigot-url": "https://hub.spigotmc.org/jenkins/job/BuildTools/lastSuccessfulBuild/artifact/target/BuildTools.jar",
        "cwd": "{{env `PWD`}}",
        "local-artefact-dir": "CHANGE ME",
        "container-dir": "/minecraft",
        "user": "minecraft",
        "uid": "10000",
        "group": "minecraft",
        "gid": "10000"
    },
    "builders": [
        {
            "type": "docker",
            "image": "alpine:3.5",
            "pull": false,
            "discard": true,
            "run_command": [ "-d", "-i", "-t", "{{.Image}}", "/bin/sh" ],
            "changes": [ "USER {{user `user`}}" ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "apk --no-cache --update upgrade",
                "apk --no-cache add ca-certificates wget openjdk8 git bash",
                "update-ca-certificates --fresh",
                "addgroup -g {{user `gid`}} {{user `group`}} && adduser -u {{user `uid`}} -D -G {{user `group`}} -h {{user `container-dir`}} -s /bin/bash {{user `user`}}"
            ]
        },
        {
            "type": "file",
            "source": "{{user `local-artefact-dir`}}/BuildTools.jar",
            "destination": "{{user `container-dir`}}/"
        },
        {
            "type": "shell",
            "inline": [
                "chmod a+r {{user `container-dir`}}/BuildTools.jar",
                "su -c 'export JAVA_HOME=/usr; java -jar BuildTools.jar' - {{user `user`}}"
            ]
        },
        {
            "type": "file",
            "direction": "download",
            "source": "{{user `container-dir`}}/spigot-{{user `version`}}.jar",
            "destination": "./{{user `local-artefact-dir`}}/"
        },
        {
            "type": "file",
            "direction": "download",
            "source": "{{user `container-dir`}}/BuildTools.log.txt",
            "destination": "./{{user `local-artefact-dir`}}/"
        }
    ]
}
